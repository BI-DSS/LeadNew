                var suc = $("#cb_sucursales").val();
                $.get('@Url.Action("Productos", "Facturacion")', { id: suc }, function (data) {
                    $("#target").html(data);
                });
            });
        });

        $(document).ready(function () {
            $("#usuIdEmpresa").change(function () {
