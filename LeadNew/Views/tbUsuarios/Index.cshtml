@model IEnumerable<LeadNew.Models.tbUsuarios>

@{
    ViewData["Title"] = "Index";
}

    <div style="padding-top: 5em;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">Listado de usuarios</li>
            </ol>
        </nav>
        <h2>Listado de Usuarios</h2>
        <p>
            <a class="btn btn-success" asp-action="Create"><img src="~/images/add-24px.svg" class="img-fluid" alt="Responsive image">Crear Usuario</a>
        </p>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Nombres
                    </th>
                    <th>
                        Apellidos
                    </th>
                    <th>
                        Correo
                    </th>
                    <th>
                        Activo
                    </th>
                    <th>
                        Razon Inactivo
                    </th>
                    <th>
                        Empresa
                    </th>
                    <th>
                        Sucursal
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuNombreUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuNombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuApellidos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuCorreo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuEsActivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuRazonInactivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuIdEmpresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.usuIdSucursal)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.usuId"><img src="~/images/create-24px.svg" class="img-fluid" alt="Responsive image">Editar</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.usuId"><img src="~/images/remove_red_eye-24px.svg" class="img-fluid" alt="Responsive image">Detalles</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.usuId"><img src="~/images/delete-24px.svg" class="img-fluid" alt="Responsive image">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>