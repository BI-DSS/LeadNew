@model LeadNew.Models.tbTasaCambio

@{
    ViewData["Title"] = "Edit";
}

<div style="padding-top: 5em;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "tbTasaCambios")">Listado de Tasa de cambios</a></li>
            <li class="breadcrumb-item active" aria-current="page">editar Tasa de cambio</li>
        </ol>
    </nav>
    <h2>Editar Tasa de Cambio</h2>
    <div class="row">
        <div class="col-md-12">
            <input type="number" class="form-control" id="id" value="@Model.id">
            <div class="form-group">
                <label for="formGroupExampleInput">Descripción:</label>
                <input type="text" class="form-control" id="tcDescripcion" placeholder="Descripción" value="@Model.tcDescripcion">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Valor:</label>
                <input type="number" class="form-control" id="tcValor" placeholder="Valor" value="@Model.tcValor">
            </div>
            <button type="button" class="btn btn-success" onclick="formcheck();">Editar Tasa de Cambio</button>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function formcheck() {
            var isValid = true;
            $('input[type="text"], input[type = "password"], input[type = "number"]').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                }
                else {
                    $(this).css({
                        "border": "",
                        "background": ""
                    });
                }
            });
            if (isValid == false) {
                e.preventDefault();
            } else {
                Crear();
            }
        }

        function Crear() {
            var fd = new FormData();
            var id = $("#id").val();
            var descripcion = $("#tcDescripcion").val();
            var valor = $("#tcValor").val();

            fd.append("descripcion", descripcion);
            fd.append("valor", valor);

            $.ajax({
                url: '@Url.Action("EditarTasa", "tbTasaCambios")',
                type: 'POST',
                cache: false,
                processData: false,
                contentType: false,
                processData: false,
                dataType: 'json',
                data: fd,
                success: function (data) {
                    if (data == true) {
                        location.href = '@Url.Action("Index", "tbTasaCambios")';
                    } else if (data == false){
                        alert("Error al ingresar moneda");
                    }
                },
                error: function (jqXHR, textStatus, error) {
                    var exception = JSON.parse(jqXHR.responseText);
                    alert("error al enviar datos" + exception);
                }
            });
        }
    </script>
}
