@model IEnumerable<LeadNew.Models.tbTasaCambio>

@{
    ViewData["Title"] = "Index";
}

<div style="padding-top: 5em;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Listado tasa de cambios</li>
        </ol>
    </nav>

    <h2>Listado de Tasas de Cambio</h2>

    <p>
        <a class="btn btn-success" asp-action="Create"><img src="~/images/add-24px.svg" class="img-fluid" alt="Responsive image">Crear Nueva Tasa</a>
    </p>
    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>
                    Descripcion
                </th>
                <th>
                    Fecha de Ingreso
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Valor
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tcDescripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tcFechaIngreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tcEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tcValor)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id"><img src="~/images/create-24px.svg" class="img-fluid" alt="Responsive image">Editar</a>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id"><img src="~/images/remove_red_eye-24px.svg" class="img-fluid" alt="Responsive image">Detalles</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id"><img src="~/images/delete-24px.svg" class="img-fluid" alt="Responsive image">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
