@model LeadNew.Models.tbProveedores

@{
    ViewData["Title"] = "Edit";
}

<div style="padding-top: 5em;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "tbProveedores")">Listado de proveedores</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar proveedor</li>
        </ol>
    </nav>
    <h2>Editar Proveedor</h2>
    <div class="row">
        <div class="col-md-12">
            <input type="number" class="form-control" id="pvid" hidden value="@Model.pvId">
            <div class="form-group">
                <label for="formGroupExampleInput">Nombre:</label>
                <input type="text" class="form-control" id="pvNombre" placeholder="Nombre" value="@Model.pvNombre">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Teléfono:</label>
                <input type="text" class="form-control" id="pvTelefono" placeholder="Telefono" value="@Model.pvTelefono">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Correo:</label>
                <input type="text" class="form-control" id="pvCorreo" placeholder="Correo" value="@Model.pvCorreo">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Dirección:</label>
                <textarea class="form-control" id="pvDireccion" placeholder="Dirección">@Model.pvDireccion</textarea>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Descripción:</label>
                <textarea class="form-control" id="pvDescripcion" placeholder="Descripción">@Model.pvDescripcion</textarea>
            </div>
            <button type="button" class="btn btn-success" onclick="formcheck();">Crear Proveedor</button>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function formcheck() {
            var isValid = true;
            $('input[type="text"], input[type = "password"], input[type = "number"]').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                }
                else {
                    $(this).css({
                        "border": "",
                        "background": ""
                    });
                }
            });
            if (isValid == false) {
                e.preventDefault();
            } else {
                Crear();
            }
        }

        function Crear() {
            var fd = new FormData(); 
            var pvid = $("#pvid").val();
            var pvNombre = $("#pvNombre").val();
            var pvTelefono = $("#pvTelefono").val();
            var pvCorreo = $("#pvCorreo").val();
            var pvDireccion = $("#pvDireccion").val();
            var pvDescripcion = $("#pvDescripcion").val();

            fd.append("pvid", pvid);
            fd.append("pvNombre", pvNombre);
            fd.append("pvTelefono", pvTelefono);
            fd.append("pvCorreo", pvCorreo);
            fd.append("pvDireccion", pvDireccion);
            fd.append("pvDescripcion", pvDescripcion);

            $.ajax({
                url: '@Url.Action("EditarProveedor", "tbProveedores")',
                type: 'POST',
                cache: false,
                processData: false,
                contentType: false,
                processData: false,
                dataType: 'json',
                data: fd,
                success: function (data) {
                    if (data == true) {
                        location.href = '@Url.Action("Index", "tbProveedores")';
                    } else if (data == false){
                        alert("Error al ingresar proveedor");
                    }
                },
                error: function (jqXHR, textStatus, error) {
                    var exception = JSON.parse(jqXHR.responseText);
                    alert("error al enviar datos" + exception);
                }
            });
        }
    </script>
}