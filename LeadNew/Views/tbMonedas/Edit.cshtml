@model LeadNew.Models.tbMoneda

@{
    ViewData["Title"] = "Edit";
}

<div style="padding-top: 5em;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "tbMonedas")">Listado de monedas</a></li>
            <li class="breadcrumb-item active" aria-current="page">editar monedas</li>
        </ol>
    </nav>
    <h2>Editar</h2>
    <div class="row">
        <hr />
        <div class="row">
            <div class="col-md-12">
                <input type="number" class="form-control" id="moId" value="@Model.moId" disabled="disabled">
                <div class="form-group">
                    <label for="formGroupExampleInput">Moneda Abreviatura:</label>
                    <input type="text" class="form-control" id="moAbreviatura" placeholder="Moneda Abreviatura" value="@Model.moAbreviatura">
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Moneda Nombre:</label>
                    <input type="text" class="form-control" id="moNombre" placeholder="Moneda Nombre" value="@Model.moNombre">
                </div>
                <button type="button" class="btn btn-success" onclick="formcheck();">Editar Moneda</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function formcheck() {
            var isValid = true;
            $('input[type="text"], input[type = "password"], input[type = "number"]').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                }
                else {
                    $(this).css({
                        "border": "",
                        "background": ""
                    });
                }
            });
            if (isValid == false) {
                e.preventDefault();
            } else {
                Editar();
            }
        }

        function Editar() {
            var fd = new FormData();
            var id = $("#moId").val();
            var abreviatura = $("#moAbreviatura").val();
            var nombre = $("#moNombre").val();

            fd.append("id", id);
            fd.append("abreviatura", abreviatura);
            fd.append("nombre", nombre);

            $.ajax({
                url: '@Url.Action("EditarMoneda", "tbMonedas")',
                type: 'POST',
                cache: false,
                processData: false,
                contentType: false,
                processData: false,
                dataType: 'json',
                data: fd,
                success: function (data) {
                    if (data == true) {
                        location.href = '@Url.Action("Index", "tbMonedas")';
                    } else if (data == false){
                        alert("Error al ingresar moneda");
                    }
                },
                error: function (jqXHR, textStatus, error) {
                    var exception = JSON.parse(jqXHR.responseText);
                    alert("error al enviar datos" + exception);
                }
            });
        }
    </script>

}
