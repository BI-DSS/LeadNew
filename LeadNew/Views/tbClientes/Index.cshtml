@model IEnumerable<LeadNew.Models.tbClientes>

@{
    ViewData["Title"] = "Index";
}

<div style="padding-top: 5em;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Listado de clientes</li>
        </ol>
    </nav>
    <h2>Listado de Clientes</h2>

    <p>
        <a class="btn btn-success" asp-action="Create"><img src="~/images/add-24px.svg" class="img-fluid" alt="Responsive image">Crear cliente</a>
    </p>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Telefono
                </th>
                <th>
                    Identidad
                </th>
                <th>
                    RTN
                </th>
                <th>
                    Dirección
                </th>
                <th>
                    Creado por
                </th>
                <th>
                    Fecha de creación
                </th>
                <th>
                    Empresa
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.clNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clApellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clTelefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clIdentidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clRTN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clDireccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clUsuarioCrea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clFechaCrea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clIdEmpresa)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.clId"><img src="~/images/create-24px.svg" class="img-fluid" alt="Responsive image">Editar</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.clId"><img src="~/images/remove_red_eye-24px.svg" class="img-fluid" alt="Responsive image">Detalles</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.clId"><img src="~/images/delete-24px.svg" class="img-fluid" alt="Responsive image">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>