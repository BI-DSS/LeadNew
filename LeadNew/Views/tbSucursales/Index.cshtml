@model IEnumerable<LeadNew.Models.tbSucursales>

@{
    ViewData["Title"] = "Sucursales";
}

    <div style="padding-top: 5em;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">Sucursales</li>
            </ol>
        </nav>
        <h2>Listado de Sucursales</h2>
        <p>
            <a class="btn btn-success" asp-action="Create"><img src="~/images/add-24px.svg" class="img-fluid" alt="Responsive image">Crear Sucursal</a>
        </p>
        <table class="table table-bordered table-hover table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>
                        Sucursal
                    </th>
                    <th>
                        Empresa
                    </th>
                    <th>
                        Fecha Creacion
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucIdEmpresa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucFechaCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sucEstado)
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.sucId"><img src="~/images/create-24px.svg" class="img-fluid" alt="Responsive image">Editar</a>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.sucId"><img src="~/images/remove_red_eye-24px.svg" class="img-fluid" alt="Responsive image">Detalles</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.sucId"><img src="~/images/delete-24px.svg" class="img-fluid" alt="Responsive image">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
