@*@model LeadNew.Models.tbProducto*@

@{
    ViewData["Title"] = "Detalles " + " ";
}

    <style>
        .imagen {
            width: 10em;
            height: 10em;
        }
    </style>

    <div style="padding-top: 5em;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "tbProductoes")">Listado de productos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Detalle producto</li>
            </ol>
        </nav>
        <h2>Detalles de Producto</h2>
        <div>
            <dl class="dl-horizontal">
                @foreach (var item in ViewData["Productos"] as IEnumerable<LeadNew.Models.ProductosVista>)
                {
                    <dt>
                        Imagen
                    </dt>
                    <dd>
                        <img class="img-fluid img-thumbnail imagen" src="data:image/jpeg;base64,@Convert.ToBase64String(item.prImagen)" />
                    </dd>                    
                    <dt>
                        Código de producto
                    </dt>
                    <dd>
                        @item.prIdInterno
                    </dd>
                    <dt>
                        Detalle
                    </dt>
                    <dd>
                        @item.prDetalle
                    </dd>
                    <dt>
                        Cantidad
                    </dt>
                    <dd>
                        @item.prCantidad
                    </dd>
                    <dt>
                        Precio de costo
                    </dt>
                    <dd>
                        @item.prPrecioCosto
                    </dd>
                    <dt>
                        Precio de venta
                    </dt>
                    <dd>
                        @item.prPrecioVenta
                    </dd>
                    <dt>
                        Moneda
                    </dt>
                    <dd>
                        @item.moNombre
                    </dd>
                    <dt>
                        Fecha de Ingreso
                    </dt>
                    <dd>
                        @item.prFechaIngreso
                    </dd>

                    <dt>
                        Agencia/Sucursal
                    </dt>
                    <dd>
                        @item.sucNombre
                    </dd>
                }
            </dl>
        </div>
    </div>