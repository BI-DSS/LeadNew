@model IEnumerable<LeadNew.Models.tbProducto>

@{
    ViewData["Title"] = "Index";
}

<style>
    .imagen{
        width: 8em;
        height: 8em;
    }
</style>

<div style="padding-top: 5em;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Listado de Productos</li>
        </ol>
    </nav>
    <h2>Listado de Productos</h2>
    <p>
        <a class="btn btn-success" asp-action="Create"><img src="~/images/add-24px.svg" class="img-fluid" alt="Responsive image">Crear Producto</a>
    </p>
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>
                    Imagen
                </th>
                <th>
                    Código de producto
                </th>
                <th>
                    Detalle
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Precio de Costo
                </th>
                <th>
                    Precio de Venta
                </th>
                <th>
                    Moneda
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Fecha de Ingreso
                </th>
                <th>
                    Ingresado por
                </th>
                <th>
                    Sucursal
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img class="img-fluid img-thumbnail imagen" src="data:image/jpeg;base64,@Convert.ToBase64String(item.prImagen)"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prIdInterno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prDetalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prCantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prPrecioCosto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prPrecioVenta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prMoneda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prEstado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prFechaIngreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.prIdSucursal)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.prId"><img src="~/images/create-24px.svg" class="img-fluid" alt="Responsive image">Editar</a>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.prId"><img src="~/images/remove_red_eye-24px.svg" class="img-fluid" alt="Responsive image">Detalles</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.prId"><img src="~/images/delete-24px.svg" class="img-fluid" alt="Responsive image">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>