@model IEnumerable<LeadNew.Models.tbPaises>

@{
    ViewData["Title"] = "Index";
}

    <div style="padding-top: 5em;">
        <nav aria-label="breadcrum">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">Listado de Paises</li>
            </ol>
        </nav>
        <h2>Listado de Paises</h2>

        <p>
            <a class="btn btn-success" asp-action="Create"><img src="~/images/add-24px.svg" class="img-fluid" alt="Responsive image">Crear Pais</a>
        </p>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Nombre Pais
                    </th>
                    <th>
                        Codigo Postal
                    </th>
                    <th>
                        Abreviatura Pais
                    </th>
                    <th>
                        Creado Por
                    </th>
                    <th>
                        Fecha Creacion
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.paNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.paCodPostal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.paAbreviatura)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.paUsuarioCrea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.paFechaCrea)
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.paId"><img src="~/images/create-24px.svg" class="img-fluid" alt="Responsive image">Editar</a>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.paId"><img src="~/images/remove_red_eye-24px.svg" class="img-fluid" alt="Responsive image">Detalles</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.paId"><img src="~/images/delete-24px.svg" class="img-fluid" alt="Responsive image">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
