@model IEnumerable<LeadNew.Models.tbEmpresa>

@{
    ViewData["Title"] = "Index";
}

<div class="tabcontent" id="infogral" style="padding-top: 5em;">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">Datos de la Empresa</li>
        </ol>
    </nav>
    <h3>Datos de la Empresa</h3>
    <div>
        <h2>Datos de la Empresa</h2>
        <p>
            <a class="btn btn-success" asp-action="Create"><img src="~/images/add-24px.svg" class="img-fluid" alt="Responsive image">Crear Empresa</a>
        </p>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Nombre de Empresa
                    </th>
                    <th>
                        Direccion de Empresa
                    </th>
                    <th>
                        Fecha de Creacion
                    </th>
                    <th>
                        Licencia de Empresa
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.empNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empDireccion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empFechaCrea)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.empLicencia)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.empId">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.empId">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.empId">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>